<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0ff">

    <TextView
        android:id="@+id/txt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="Center"
        android:textSize="30dp"
        android:background="#ff0"/>
    <TextView
        android:id="@+id/txt_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:text="Right"
        android:textSize="30dp"
        android:layout_alignBaseline="@+id/txt_center"
        android:layout_alignBottom="@+id/txt_center"
        android:layout_toRightOf="@+id/txt_center"
        android:layout_toEndOf="@+id/txt_center" />

    <TextView
        android:id="@+id/txt_parent_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="ParentBottom"
        android:textSize="30dp"
        android:background="#f0f"
        />

    <TextView
        android:id="@+id/txt_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_parent_bottom"
        android:text="top"
        android:textSize="30dp"
        android:background="#0ff"
        />
    <TextView
        android:id="@+id/txt_ade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/txt_parent_bottom"
        android:text="ADE"
        android:textSize="30dp"
        android:background="#0fff"
        />

</RelativeLayout>
